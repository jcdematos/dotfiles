option=$(printf ' Power Off\n Suspend\n Lock Screen\n Logout' | wofi --dmenu --location 2 --columns 1 -H 50 --height 100% --width 100% --yoffset -40)

case "$option" in
    " Power Off")
        notify-send 'Shuting down in 5 seconds' 
        sleep 5
        systemctl poweroff
        ;;
    " Suspend")
        notify-send 'Suspending down in 5 seconds' 
        sleep 5
        systemctl suspend
        ;;
    " Lock Screen")
        loginctl lock-session
        ;;
    " Logout")
        loginctl terminate-session
        ;;
esac
