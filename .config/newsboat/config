external-url-viewer "urlview"
cache-file "~/.config/newsboat/cache.db"

auto-reload yes
reload-time 30
notify-beep no
confirm-exit yes

max-items 1000

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist 
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key o open
bind-key a toggle-article-read
bind-key l toggle-show-read-feeds
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete  

macro w set browser "w3m" ; open-in-browser ; set browser linkhandler
macro i set browser "firefox" ; open-in-browser ; set browser linkhandler
macro y set browser "echo $1  >> ~/Dados/Youtube/YoutubeFeed" ; open-in-browser ; set browser linkhandler
macro s set browser "echo $1  >> ~/Dados/Youtube/SoundCloundFeed" ; open-in-browser ; set browser linkhandler
macro c set browser "echo $1 | xclip -i" ; open-in-browser ; set browser linkhandler
